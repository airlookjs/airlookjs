{
    "name": "loudness",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "tags": ["type:app"],
    "projectType": "application",
    "sourceRoot": "packages/loudness/src",
    "targets": {
        "lint": {
          "executor": "@nx/eslint:lint",
          "outputs": ["{options.outputFile}"]
        },
        "build": {
          "executor": "@nx/js:tsc",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/loudness",
            "main": "packages/loudness/src/index.ts",
            "tsConfig": "packages/loudness/tsconfig.lib.json",
            "assets": ["packages/loudness/install.sh"],
            "generateLockfile": true
          },
          "dependsOn": ["^build"]
        },
        "container": {
          "executor": "@nx-tools/nx-container:build",
          "dependsOn": ["build"],
          "defaultConfiguration": "local",
          "options": {
            "context": "dist",
            "file": "packages/loudness/Dockerfile"
          },
          "configurations": {
            "local": {
              "tags": ["loudness:latest"],
              "push": false
            },
            "production": {
              "tags": ["my.image-registry.com/my-app:latest"],
              "push": true
            }
          }
        },
        "test": {
          "executor": "@nx/vite:test",
          "outputs": ["{options.reportsDirectory}"],
          "options": {
            "reportsDirectory": "../coverage/libs/util"
          }
        }
      }
}